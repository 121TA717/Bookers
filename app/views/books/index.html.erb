

 <h1>Books</h1>
<% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
   <% end %>
 <table>
   <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
   </thead>

   <% @books.each do |book| %>
    <tbody>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to 'Show', book_path(book.id) %></td>
          <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
          <td><%= link_to 'Destroy', book_path(book.id), method: :delete,"data-confirm" => "Are you sure?" %></td>
        </tr>
    </tbody>
    <% end %>

 </table>

<h2>New book</h2>
<% if @book.errors.any? %>
<div id="error_explanation">
 <h2><%= @book.errors.count %>error prohibited this book from being saved:</h2>
 <ul>
   <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
   <% end %>
 </ul>
 </div>
<% end %>
<!-- form_with部分 -->
<%= form_with model: Book.new do |f| %>
  <br><lable>Title</lable>
  <br><%= f.text_field :title %>

  <br><label>Body<babel>
  <br><%= f.text_area :body %>
  <br><%= f.submit "Create Book" %>
  <% end %>
