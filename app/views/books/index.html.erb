<div class="book-wrap">
<% @lists.each do |book| %>
 <div class="book-comment">
   <span class="book-body"><%= book.body %></span>
   <span class="book-title"><%=link_to book.title, book_path(book.id) %></span>
 </div>
</div>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>

      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to book.edit %></td>
        <td><%= link_to book.destroy %></td>
      </tr>

      <% end%>
  </tbody>

</table>

<h2>New book</h2>
<!-- form_with部分 -->
<%= form_with model: Book.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <%= link_to book.title, book_path(book.id) %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit '投稿' %>
  <% end %>
<% end %>